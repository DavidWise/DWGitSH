<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp2.2;netstandard2.0;net45;net46;net47;net48</TargetFrameworks>
    <Authors>David Wise</Authors>
    <Company />
    <Copyright>@2019 David Wise</Copyright>
    <NeutralLanguage>en-US</NeutralLanguage>
  </PropertyGroup>
	<PropertyGroup Condition=" '$(TargetFramework)' == 'netstandard2.0'">
		<DefineConstants>NETCORE;NETSTANDARD;NETSTANDARD2_0</DefineConstants>
	</PropertyGroup>
	
	<PropertyGroup Condition=" '$(TargetFramework)' == 'net45'">
		<DefineConstants>NET45;NETFULL</DefineConstants>
	</PropertyGroup>
	<PropertyGroup Condition=" '$(TargetFramework)' == 'net46'">
		<DefineConstants>NET46;NETFULL</DefineConstants>
	</PropertyGroup>
	<PropertyGroup Condition=" '$(TargetFramework)' == 'net47'">
		<DefineConstants>NET47;NETFULL</DefineConstants>
	</PropertyGroup>	
	<PropertyGroup Condition=" '$(TargetFramework)' == 'net48'">
		<DefineConstants>NET48;NETFULL;NETSTANDARD;NETSTANDARD2_0</DefineConstants>
	</PropertyGroup>	

	
	<PropertyGroup Condition=" '$(TargetFramework)' == 'netcoreapp2.2'">
		<DefineConstants>NETCORE22;NETCORE</DefineConstants>
	</PropertyGroup>	

	<ItemGroup>
	  <PackageReference Include="DWPowerShell.Utility" Version="0.0.3" />
	  <PackageReference Include="StaticAbstraction" Version="0.0.10" />
	</ItemGroup>	

	<ItemGroup Condition="'$(TargetFramework)' == 'net48'">
	  <PackageReference Include="Microsoft.PowerShell.5.1.ReferenceAssemblies">
	    <Version>1.0.0</Version>
	  </PackageReference>
	</ItemGroup>	

	<ItemGroup Condition="'$(TargetFramework)' == 'net47'">
	  <PackageReference Include="Microsoft.PowerShell.5.1.ReferenceAssemblies">
	    <Version>1.0.0</Version>
	  </PackageReference>
	</ItemGroup>	

	<ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
	  <PackageReference Include="Microsoft.PowerShell.5.1.ReferenceAssemblies">
	    <Version>1.0.0</Version>
	  </PackageReference>
	</ItemGroup>	

	<ItemGroup Condition="'$(TargetFramework)' == 'netcoreapp2.2'">
	  <PackageReference Include="Microsoft.PowerShell.Native">
	    <Version>6.2.0</Version>
	  </PackageReference>
	</ItemGroup>	

	<ItemGroup>
	  <None Update="PSScripts\defaultColors.csv">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	</ItemGroup>	

	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
	  <Exec Command="echo powershell.exe -NoLogo -NoProfile -File $(ProjectDir)PostBuild.ps1 -ProjectDir $(ProjectDir) -TargetDir $(TargetDir)" />
	</Target>
</Project>
